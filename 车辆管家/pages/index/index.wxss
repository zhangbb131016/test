/*button*/
.btn { 
 width: 80%; 
 padding: 20rpx 0; 
 border-radius: 10rpx; 
 text-align: center; 
 margin: 40rpx 10%; 
 background: #000; 
 color: #fff; 
 float: left;
} 
  
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
 width: 100%; height: 90%;
 position: fixed; 
 top: 5%; 
 left: 0; padding: 0 40rpx;
 z-index: 1001;box-sizing: border-box; 
} 
 .drawer_box_main{width: 100%;height: 100%;float: left;overflow: auto;background: #fff; border-radius: 3px;padding: 30rpx;box-sizing: border-box; } 
.drawer_box text{width: 100%;line-height: 45rpx;float: left;font-size: 28rpx;color: #333;}
.btn_ok{ 
width: 100%;float: left;margin: 40rpx 0;padding: 20rpx 0;text-align: center;color: #fff;font-size: 28rpx;background: #5990f4;border-radius: 4px;
} 
.btn_ok:active{background: #4783f0;}