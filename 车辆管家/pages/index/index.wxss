/*button*/
.btn { 
 width: 80%; 
 padding: 20rpx 0; 
 border-radius: 10rpx; 
 text-align: center; 
 margin: 40rpx 10%; 
 background: #000; 
 color: #fff; 
 float: left;
} 
  
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
 width: 100%; height: 100%;
 position: fixed; 
 left: 0; padding: 0 80rpx;
 z-index: 1001;box-sizing: border-box; background: rgba(0, 0, 0, 0.6);
} 
 .drawer_box_main{width: 100%;height: 100%;float: left;position: relative;} 
  .drawer_box_main .del{width: 80rpx;position: absolute;bottom: 20rpx;left: 50%;margin-left: -45rpx;}
 .drawer_box .text_w{width: 100%;height: 100%;float: left;padding: 40rpx 0 120rpx;box-sizing: border-box;}
.drawer_box .text_w_i_w{width: 100%;height: 100%;float: left;background: #fff;border-radius: 6px;padding: 30rpx 0;box-sizing: border-box;}
  .drawer_box .text_w_i{width: 100%;height: 100%;float: left;padding: 0 30rpx;box-sizing: border-box;overflow: auto;}
.drawer_box text{width: 100%;line-height: 45rpx;float: left;font-size: 28rpx;color: #333;}
 .drawer_box .text_head{font-size: 34rpx;text-align: center;padding: 5rpx 0 20rpx 0;}
.btn_ok{ 
width: 100%;float: left;margin: 40rpx 0 20rpx;padding: 20rpx 0;text-align: center;color: #fff;font-size: 28rpx;background: #5990f4;border-radius: 4px;
} 
.btn_ok:active{background: #4783f0;}