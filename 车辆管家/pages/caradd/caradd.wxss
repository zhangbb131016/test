page{width: 100%;height:100%;background: #c3eeff;}
.bindCar {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0 0 10rpx #b9c4fc;
  border-radius: 5px;
  margin: 0 auto;
}
.bindCaritem {
  width: 100%;
  padding:26rpx 0;
  margin: 0 auto;
position: relative;
}
.bindCaritem::after{
  position: absolute;right: 0;bottom: 0;left: 0;height: 1px;
    content: '';-webkit-transform: scaleY(.5);transform: scaleY(.5);background-color: #808080;
}
.bindCaritem:last-child::after{height: 0;}
.bindCarnum {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.carpicker {
  color: #989898;
  font-size: 34rpx;
}
.carpicker .image1 {
 width: 20rpx;height: 12rpx;position: absolute;right: 10rpx;top: 50%;margin-top: -6rpx;
}
.areapicker {
  width: 280rpx;
  color: #989898;
  font-size: 34rpx;
}
.carpicker text{
  color: #000;padding: 0 40rpx 0 24rpx;
}
.areapicker text {
  color: #000;padding: 0 10rpx 0 24rpx;
}
.areapicker .image1 {
 width: 20rpx;height: 12rpx;position: absolute;right: 20rpx;top: 50%;margin-top: -6rpx;
}
.bindCarKey {
  color: #989898;
  font-size: 34rpx;
}
.notice {
  width: 100%;
  float: left;
  font-size: 28rpx;
  margin-top: 40rpx;
  color: #989898;
 text-align: center;
}
.inpt_w{width: 100%;height: 100%; position: absolute;padding-left: 160rpx;box-sizing: border-box;}
.commit {
  width: 100%;
  float: left;
  background: #3695ff;
  border-radius: 15px;
  margin-top: 40rpx;
  text-align:center;
  padding: 20rpx 0;
   color: #fff;
}
.bindCar input{padding-top: 4rpx;}